import turtle as t
import Fonts as f
import matrix as m

t.Screen()
input("Set Screen size")
print(t.window_height())
print(t.window_width())

wid = t.window_width()
hei = t.window_height()

# determine how large the lettering should be
size = int(input("How large should the letters be? 1-100\n"))
size /= 100
print(size)
letSize = (120 * size) + 5

# determine how many letters fit on the screen
widQuant = int(wid / (letSize + 5))
heiQuant = int(hei/ (letSize + 5))
print(widQuant)
print(heiQuant)


# go to the initial position
def restartdraw(wid, hei, letSize):
    t.setx(-1*(wid/2) + (letSize / 2))
    t.sety((hei/2) - letSize)
    #f.box(size)

t.speed(0)

mess = str(input("Input your message\n"))
formMess = m.matrixgen(widQuant, heiQuant, mess)
print(formMess)

# Drawing sequence
refnum = len(formMess)/heiQuant
#restartdraw(wid, hei, letSize)

for j in range(1, len(formMess)+1):
    k = j % heiQuant
    print(k)
    if k == 0:
        time.sleep(1)
        t.clear()
    t.pu()
    t.setx(-1*(wid/2) + (letSize / 2))
    t.sety((hei/2) - (k * letSize) - 5)
    ylis = formMess[j-1]
    
    for i in range(0, widQuant):
        #f.box(size)
        # THIS MULTIPLICATION IS ALWAYS EQUALLING ZERO
        f.Draw(size, ylis[i])
        t.fd(letSize + 5)

t.exitonclick()
